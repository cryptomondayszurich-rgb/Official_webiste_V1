---
interface Props {
}

const {} = Astro.props;
---

<div class="">
    <div class="relative isolate overflow-hidden bg-gradient-to-b from-brand-pale via-white">
        <div class="mx-auto max-w-7xl pt-16 pb-24 sm:pb-28 lg:grid lg:grid-cols-2 lg:gap-x-12 lg:px-8 lg:pt-36 lg:pb-40">
            <div class="px-6 lg:px-0">
                <div class="mx-auto max-w-2xl">
                    <div class="max-w-lg">
                        <div class="mt-8 flex flex-col gap-4 sm:mt-10 sm:flex-row sm:items-center lg:mt-12">
                            <div class="inline-flex flex-wrap items-center gap-4">
                                <span class="rounded-full bg-brand-navy/90 px-3 py-1 text-sm font-semibold leading-6 text-white ring-1 ring-inset ring-brand-navy">Join the community</span>
                                <a
                                    href="https://luma.com/user/cryptomondayszh"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center space-x-2 text-sm font-medium leading-6 text-brand-navy/80"
                                >
                                    <span>Luma</span>
                                    <svg class="h-5 w-5 text-brand-soft" viewBox="0 0 20 20" fill="currentColor"
                                         aria-hidden="true">
                                        <path fill-rule="evenodd"
                                              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                </a>
                                <a
                                    href="https://www.meetup.com/es/cryptomondays-zurich/"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center space-x-2 text-sm font-medium leading-6 text-brand-navy/80"
                                >
                                    <span>Meetup</span>
                                    <svg class="h-5 w-5 text-brand-soft" viewBox="0 0 20 20" fill="currentColor"
                                         aria-hidden="true">
                                        <path fill-rule="evenodd"
                                              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                        <h1 class="mt-8 text-4xl font-roboto tracking-tight text-brand-navy sm:text-6xl">
                            Switzerland's most active blockchain, crypto &amp; Web3 community
                        </h1>
                        <p class="mt-6 text-lg text-brand-navy/80">From local meetups to global reach! CryptoMondays Zürich connects our community through online webinars and in-person events alike.
                        </p>
                        <div class="mt-8 flex items-center gap-x-6">
                            <a href="https://linktr.ee/cryptomondayszurich"
                               class="rounded-md border border-brand-vivid bg-brand-vivid px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm transition-colors hover:bg-brand-bold focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-bold">
                                Explore
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-10 px-1 md:mx-auto md:max-w-2xl lg:mx-0 lg:mt-12 lg:w-screen relative">
                <img id="image"
                     class="rounded-xl top-0 left-0 w-full h-auto opacity-0 transition-opacity duration-1000 ease-in-out"
                     src="/assets/hero-photo-1.png"
                     alt="CryptoMondays Zürich community event"/>
                <div class="absolute top-6 right-6 rounded-2xl bg-white/90 px-5 py-4 shadow-lg ring-1 ring-brand-soft/70">
                    <p class="text-xs font-semibold uppercase tracking-[0.2em] text-brand-navy/60">Live carousel</p>
                    <div class="mt-2 flex items-center gap-3">
                        <span id="heroSlideText" class="text-base font-bold text-brand-navy">1 / 3</span>
                        <span class="relative flex h-3 w-3">
                            <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-brand-vivid opacity-70"></span>
                            <span class="relative inline-flex h-3 w-3 rounded-full bg-brand-vivid"></span>
                        </span>
                    </div>
                </div>

                

            </div>

        </div>
        <div class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-gradient-to-t from-white sm:h-32"></div>
    </div>
</div>


<script type="module">
    const images = [
        "/assets/hero-photo-1.png",
        "/assets/hero-photo-2.png",
        "/assets/hero-photo-3.png",
    ];
    let currentIndex = 0;
    const totalSlides = images.length;
    const imageElement = document.getElementById('image');
    const slideText = document.getElementById('heroSlideText');

    if (!imageElement) {
        return;
    }

    const updateIndicator = () => {
        if (slideText) {
            slideText.textContent = `${currentIndex + 1} / ${totalSlides}`;
        }
    };

    imageElement.classList.remove('opacity-0');
    updateIndicator();

    function changeImage() {
        imageElement.classList.add('opacity-0');

        setTimeout(() => {
            currentIndex = (currentIndex + 1) % totalSlides;
            imageElement.src = images[currentIndex];
            imageElement.onload = () => {
                imageElement.classList.remove('opacity-0');
                updateIndicator();
            };
        }, 1000);
    }

    setInterval(changeImage, 4000);
</script>
