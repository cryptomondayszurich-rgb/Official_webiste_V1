---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html class="h-full bg-brand-pale" lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Dashboard template">
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/png" href="/assets/cryptomondays-logo.png" />
  <meta name="generator" content="Dashboard" />
  <title>{title}</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400&family=Roboto:wght@100&display=swap" rel="stylesheet">
  <ViewTransitions />
</head>
<body class="h-full font-nunito text-brand-navy">

<div class="bg-white">
  <!-- Header -->
  <header class="absolute inset-x-0 top-0 z-50">
    <nav class="flex items-center justify-center px-6 py-3 lg:px-8 lg:py-4" aria-label="Global">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">CryptoMondays Zürich</span>
        <div class="flex items-center justify-center overflow-hidden rounded-full px-1 py-1 sm:px-2">
          <img
            class="h-[5.5rem] w-auto scale-110 object-cover md:h-[7rem] lg:h-[8rem]"
            style="clip-path: inset(16% 8% 10% 8%);"
            src="/assets/cryptomondays-logo.png"
            alt="CryptoMondays Zürich logo"
          >
        </div>
      </a>
    </nav>
  </header>

  <main class="isolate mt-4 sm:mt-5 lg:mt-6">
    <slot />
  </main>

  <!-- Footer -->
  <div class="mx-auto mt-32 max-w-7xl px-6 lg:px-8">
    <Footer />
  </div>
</div>

</body>
</html>
